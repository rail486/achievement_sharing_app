<% provide(:title, 'タスク一覧') %>
<h1 class="display-4">タスク一覧</h1>

<ul class="list-group" style="width: 14rem;">
  <li class="list-group-item h5">日付 : <%= session[:date] %></li>
</ul>

<br>

<p>
  <%= link_to "戻る", "/calendar?start_date=#{session[:date]}", class: "btn btn-success" %>
  <%= link_to "編集", tasks_path(session[:date]), class: "btn btn-success" %>
</p>

<table class="table table-striped table-success table-bordered">
  <thead>
    <tr>
      <th scope="col" class="w-50">内容</th>
      <th scope="col">達成度</th>
      <th scope="col">共有状況</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="w-50"><%= task.content %></td>
        <td>
          <div class="progress bg-secondary" style="height: 25px;">
            <div class="progress-bar bg-success" role="progressbar" style="width: <%= task.achievement %>%;">
              <%= task.achievement %>%
            </div>
          </div>
        </td>
        <td>
          <% if task.share == true %>
            共有中
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
