<h1 class="display-2">タスク一覧</h1>

<ul class="list-group" style="width: 12rem;">
  <li class="list-group-item h5">日付 : <%= session[:date] %></li>
</ul>
<br>
<p>
  <%= link_to "戻る", calendar_path(session[:userid]), class: "btn btn-success" %>

  <%= link_to "編集", tasks_path(session[:date]), class: "btn btn-success" %>
</p>
<br>

<h4>【未共有タスク】</h4>

<table class="table table-striped table-success">
  <thead>
    <tr>
      <th scope="col" width= "500">内容</th>
      <th scope="col">達成度</th>
      <th scope="col">共有状況</th>
  </tr>
  </thead>
  <tbody>
    <% @unshared_tasks.each do |task| %>
      <tr>
        <td width= "500"><%= task.content %></td>
        <td><%= task.achievement %>%</td>
        <td><%= task.share %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4>【共有中タスク】</h4>
<table class="table table-striped table-success">
  <thead>
    <tr>
      <th scope="col" class="w-50">内容</th>
      <th scope="col">達成度</th>
      <th scope="col">共有状況</th>
  </tr>
  </thead>
  <tbody>
    <% @shared_tasks.each do |task| %>
      <tr>
        <td class="w-50"><%= task.content %></td>
        <td><%= task.achievement %>%</td>
        <td><%= task.share %></td>
      </tr>
    <% end %>
  </tbody>
</table>

