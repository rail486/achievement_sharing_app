<% provide(:title, '追加') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_with model: @task do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <p></p>
      <p></p>
      <%= f.label :タスク %>
      <%= f.text_field :content, class: 'form-control' %>
      <p></p>
      <%= f.label :達成度 %>
      <%= f.number_field :achievement, class: 'form-control' %>

      <%= f.submit "タスクを追加する", class: "btn btn-success" %>
    <% end %>

    <br>
    <%= link_to "戻る", tasks_path(session[:date]), class: "btn-square-little-rich" %>

  </div>
</div>

