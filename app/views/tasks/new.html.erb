<% provide(:title, '追加') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_with model: @task do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <p></p>
      <p></p>
      <%= f.label :タスク %>
      <%= f.text_field :content, class: 'form-control' %>
      <p></p>
      <%= f.label :達成度 %>
      <%= f.number_field :achievement, class: 'form-control' %>
      <p></p>
      <%= f.submit "タスクを追加する", class: "btn btn-success" %>
    <% end %>

    <br>
    <button type="button" onclick="history.back()" class="btn btn-outline-success">戻る</button>


  </div>
</div>

