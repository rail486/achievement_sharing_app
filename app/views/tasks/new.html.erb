<% provide(:title, '追加') %>
<div class="row">
  <div class="col-md-6 offset-md-3 mt-5">

    <%= form_with model: @task do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
      <%= f.label :タスク %>
      <%= f.text_field :content, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :達成度 %>
      <%= f.number_field :achievement, class: 'form-control' %>
      </div>

      <div class="center">
      <%= f.submit "タスクを追加する", class: "btn btn-success" %>
      </div>

    <% end %>

<div class="center">
<%= link_to "戻る", tasks_path(session[:date]), class: "btn btn-outline-success mt-3" %>
</div>
  </div>

