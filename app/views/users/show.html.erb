<% provide(:title, 'プロフィール') %>
<div class="row">
  <div class="col-md-4">
    <div class="border border-success rounded mt-5 mb-3 pl-2">
      <b class="users mb-0 pt-1">
        <%= link_to @user.name, @user %>
      </b>
      <p class="mb-1">
        @<%= @user.uid %>
      </p>
      <div class="mb-1">
        <%= @user.introduction %>
      </div>
    </div>
    <section class="stats ml-2 mb-1">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if logged_in? %>
  </div>
  <div class="col-md-8">
    <div class="border border-success rounded mt-5 mb-3 pl-2">
      <p class="profile_task center mt-1 mb-1">
        現在共有中のタスク
      </p>
    </div> 
    <table class="task_table mb-3">
      <tr class="center">
        <th id="date">日付</th>
        <th id ="content">内容</th>
        <th id="achievement">達成度</th>
      </tr>
      <% @tasks.each do |task| %>
        <tr>
          <td class="center"><%= task.date %></td>
          <td><%= task.content %></td>
          <td><%= task.achievement %>%</td>
        </tr>        
      <% end %>
    </table>
    <%= will_paginate @tasks %>
  </div>
</div>